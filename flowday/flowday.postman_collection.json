{
  "info": {
    "_postman_id": "flowday-api-v1",
    "name": "Flowday API (Updated)",
    "description": "Flowday API v1 with Auth, Projects, Tasks, Calendar, Pagination & Sorting.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.token) pm.collectionVariables.set('token', json.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": ["{{baseUrl}}"],
              "path": ["me"]
            }
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Get Projects",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.length) pm.collectionVariables.set('projectId', json[0].id);"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/projects",
              "host": ["{{baseUrl}}"],
              "path": ["projects"]
            }
          }
        },
        {
          "name": "Create Project",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('projectId', json.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Flowday Project\" }",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/projects",
              "host": ["{{baseUrl}}"],
              "path": ["projects"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Finish Flowday\",\n  \"priority\": \"high\",\n  \"project_id\": {{projectId}}\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Get Tasks (Paginated + Sorted)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks?project_id={{projectId}}&limit=10&offset=0&order=created_at&dir=desc",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"],
              "query": [
                { "key": "project_id", "value": "{{projectId}}" },
                { "key": "limit", "value": "10" },
                { "key": "offset", "value": "0" },
                { "key": "order", "value": "created_at" },
                { "key": "dir", "value": "desc" }
              ]
            }
          }
        },
        {
          "name": "Get Tasks by Date",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks/by-date?date=2023-12-18",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "by-date"],
              "query": [
                { "key": "date", "value": "2023-12-18" }
              ]
            }
          }
        },
        {
          "name": "Get Tasks by Range",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks/by-range?from=2023-12-01&to=2023-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "by-range"],
              "query": [
                { "key": "from", "value": "2023-12-01" },
                { "key": "to", "value": "2023-12-31" }
              ]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PATCH",
            "body": {
              "mode": "raw",
              "raw": "{ \"status\": \"done\" }",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/tasks/1",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "1"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/tasks/1",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "1"]
            }
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api/v1" },
    { "key": "token", "value": "" },
    { "key": "projectId", "value": "" }
  ]
}
